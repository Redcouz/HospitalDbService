@model IEnumerable<HospitalDBService.ConsultModel>

@{
    ViewData["Title"] = "Consults";
}

<h1>Consults</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaterialsCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsultingRoom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsultDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaterialsCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConsultingRoom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConsultDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="GetConsultById" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
